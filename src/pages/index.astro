---
import BaseLayout from '../layouts/BaseLayout.astro';
import BlogPostCard from '../components/BlogPostCard.astro';
import NoteCard from '../components/NoteCard.astro';
import { getAllBlogPosts, getAllNotes } from '../lib/content';

const allPosts = await getAllBlogPosts();
const allNotes = await getAllNotes();

// Get pinned and latest content
const pinnedPosts = allPosts.filter((post) => post.data.pinned).slice(0, 2);
const latestPosts = allPosts.slice(0, 3);
const pinnedNotes = allNotes.filter((note) => note.data.pinned).slice(0, 2);
const latestNotes = allNotes.slice(0, 3);
---

<BaseLayout>
  <div class="container mx-auto px-4 py-12">
    <!-- Hero Section -->
    <section class="mb-16 text-center">
      <h1 class="text-5xl font-bold mb-4 text-[rgb(var(--color-text-primary))]">
        Welcome to <span class="text-[rgb(var(--color-accent))]">byteco.dev</span>
      </h1>
      <p class="text-xl text-[rgb(var(--color-text-secondary))] max-w-2xl mx-auto">
        Exploring web development, programming patterns, and technology through code and writing.
      </p>
    </section>

    <!-- Pinned Content -->
    {(pinnedPosts.length > 0 || pinnedNotes.length > 0) && (
      <section class="mb-16">
        <h2 class="text-3xl font-bold mb-6 text-[rgb(var(--color-text-primary))]">
          ðŸ“Œ Pinned
        </h2>
        <div class="grid gap-6 md:grid-cols-2">
          {pinnedPosts.map((post) => (
            <BlogPostCard post={post} />
          ))}
          {pinnedNotes.map((note) => (
            <NoteCard note={note} />
          ))}
        </div>
      </section>
    )}

    <!-- Latest Blog Posts -->
    <section class="mb-16">
      <div class="flex justify-between items-center mb-6">
        <h2 class="text-3xl font-bold text-[rgb(var(--color-text-primary))]">Latest Posts</h2>
        <a
          href="/blog"
          class="text-[rgb(var(--color-accent))] hover:text-[rgb(var(--color-accent-hover))] font-medium"
        >
          View all â†’
        </a>
      </div>
      <div class="grid gap-6 md:grid-cols-3">
        {latestPosts.map((post) => (
          <BlogPostCard post={post} />
        ))}
      </div>
    </section>

    <!-- Latest Notes -->
    <section>
      <div class="flex justify-between items-center mb-6">
        <h2 class="text-3xl font-bold text-[rgb(var(--color-text-primary))]">Latest Notes</h2>
        <a
          href="/notes"
          class="text-[rgb(var(--color-accent))] hover:text-[rgb(var(--color-accent-hover))] font-medium"
        >
          View all â†’
        </a>
      </div>
      <div class="grid gap-6 md:grid-cols-3">
        {latestNotes.map((note) => (
          <NoteCard note={note} />
        ))}
      </div>
    </section>
  </div>
</BaseLayout>
