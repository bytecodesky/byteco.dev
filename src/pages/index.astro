---
import BaseLayout from '../layouts/BaseLayout.astro';
import BlogPostCard from '../components/BlogPostCard.astro';
import NoteCard from '../components/NoteCard.astro';
import { getAllBlogPosts, getAllNotes } from '../lib/content';

const allPosts = await getAllBlogPosts();
const allNotes = await getAllNotes();

// Get pinned and latest content
const pinnedPosts = allPosts.filter((post) => post.data.pinned).slice(0, 2);
const latestPosts = allPosts.slice(0, 3);
const pinnedNotes = allNotes.filter((note) => note.data.pinned).slice(0, 2);
const latestNotes = allNotes.slice(0, 3);
---

<BaseLayout>
  <div class="container mx-auto px-8 py-16">
    <!-- Hero Section -->
    <section class="mb-24 pt-12">
      <div class="max-w-4xl">
        <div class="inline-block px-4 py-2 rounded-full glass-card mb-6">
          <span class="text-sm font-medium text-[rgb(var(--color-accent))]">ğŸ‘‹ Welcome</span>
        </div>
        <h1 class="text-6xl md:text-7xl font-bold mb-6 text-[rgb(var(--color-text-primary))] leading-tight">
          Hi, I'm <span class="text-[rgb(var(--color-accent))]">byteco</span>
        </h1>
        <p class="text-xl md:text-2xl text-[rgb(var(--color-text-secondary))] leading-relaxed mb-8 max-w-3xl">
          I explore web development, programming patterns, and technology through code and writing. 
          Building modern web experiences with TypeScript, React, and Astro.
        </p>
        <div class="flex gap-4">
          <a
            href="/blog"
            class="pill-button bg-[rgb(var(--color-accent))] text-white hover:bg-[rgb(var(--color-accent-hover))] shadow-lg hover:shadow-xl"
          >
            Read the Blog â†’
          </a>
          <a
            href="/about"
            class="pill-button glass-card text-[rgb(var(--color-text-primary))] hover:border-[rgb(var(--color-accent))]"
          >
            About Me
          </a>
        </div>
      </div>
    </section>

    <!-- Pinned Content -->
    {(pinnedPosts.length > 0 || pinnedNotes.length > 0) && (
      <section class="mb-20">
        <div class="flex items-center gap-3 mb-8">
          <span class="text-3xl">ğŸ“Œ</span>
          <h2 class="text-3xl font-bold text-[rgb(var(--color-text-primary))]">
            Featured
          </h2>
        </div>
        <div class="grid gap-6 md:grid-cols-2">
          {pinnedPosts.map((post) => (
            <BlogPostCard post={post} />
          ))}
          {pinnedNotes.map((note) => (
            <NoteCard note={note} />
          ))}
        </div>
      </section>
    )}

    <!-- Latest Blog Posts -->
    <section class="mb-20">
      <div class="flex justify-between items-center mb-8">
        <div class="flex items-center gap-3">
          <span class="text-3xl">ğŸ“</span>
          <h2 class="text-3xl font-bold text-[rgb(var(--color-text-primary))]">Latest Posts</h2>
        </div>
        <a
          href="/blog"
          class="text-[rgb(var(--color-accent))] hover:text-[rgb(var(--color-accent-hover))] font-medium flex items-center gap-2 group"
        >
          View all
          <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </a>
      </div>
      <div class="grid gap-6 md:grid-cols-3">
        {latestPosts.map((post) => (
          <BlogPostCard post={post} />
        ))}
      </div>
    </section>

    <!-- Latest Notes -->
    <section class="mb-20">
      <div class="flex justify-between items-center mb-8">
        <div class="flex items-center gap-3">
          <span class="text-3xl">ğŸ““</span>
          <h2 class="text-3xl font-bold text-[rgb(var(--color-text-primary))]">Latest Notes</h2>
        </div>
        <a
          href="/notes"
          class="text-[rgb(var(--color-accent))] hover:text-[rgb(var(--color-accent-hover))] font-medium flex items-center gap-2 group"
        >
          View all
          <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </a>
      </div>
      <div class="grid gap-6 md:grid-cols-3">
        {latestNotes.map((note) => (
          <NoteCard note={note} />
        ))}
      </div>
    </section>
  </div>
</BaseLayout>
