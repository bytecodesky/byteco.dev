---
import BaseLayout from '../layouts/BaseLayout.astro';
import BlogPostCard from '../components/BlogPostCard.astro';
import NoteCard from '../components/NoteCard.astro';
import { getAllBlogPosts, getAllNotes } from '../lib/content';
import { Bug, Pin, FileText, BookOpen, ArrowRight, Flag } from 'lucide-astro';

const allPosts = await getAllBlogPosts();
const allNotes = await getAllNotes();

// Get pinned and latest content
const pinnedPosts = allPosts.filter((post) => post.data.pinned).slice(0, 2);
const latestPosts = allPosts.slice(0, 3);
const pinnedNotes = allNotes.filter((note) => note.data.pinned).slice(0, 2);
const latestNotes = allNotes.slice(0, 3);
---

<BaseLayout>
  <div class="container mx-auto px-8 py-16">
    <!-- Hero Section -->
    <section class="mb-24 pt-12">
      <div class="max-w-4xl">
        <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full glass-card mb-6">
		<Bug size={18} class="text-red-500 animate-pulse" />
          <span class="text-sm font-medium text-[rgb(var(--color-text-primary))]">Welcome</span>
        </div>
        <h1 class="text-6xl md:text-7xl font-bold mb-6 text-[rgb(var(--color-text-primary))] leading-tight">
  Hi, I'm <span class="text-[rgb(var(--color-text-secondary))]">byteco</span>
  <span class="inline-flex items-center">
    <span class="text-green-500 text-7xl md:text-8xl animate-pulse font-light mr-1">[</span>
    
    <span class="text-[rgb(var(--color-text-secondary))]">dev</span>
    
    <span class="text-green-500 text-7xl md:text-8xl animate-pulse font-light ml-1">]</span>
  </span>
	</h1>
	<p class="text-xl md:text-2xl text-[rgb(var(--color-text-secondary))] leading-relaxed mb-8 max-w-3xl">
          Exploring the depths of low-level systems and web security. Passionate about Vulnerability Research, Bug Bounties, and 	   the art of Exploitation. Analyzing bits, bytes, and everything in between.
	</p>
        <div class="flex flex-wrap gap-4">
          <a
            href="/blog"
            class="pill-button bg-[rgba(var(--color-glass-bg),0.15)] border border-[rgba(var(--color-glass-border),0.20)] text-[rgb(var(--color-text-primary))] hover:bg-[rgba(var(--color-glass-bg),0.20)] hover:border-[rgba(var(--color-glass-border),0.30)] shadow-lg hover:shadow-xl inline-flex items-center gap-2"
          >
            Read the Blog <ArrowRight size={18} />
          </a>
          <a
            href="/ctfs"
            class="pill-button bg-[rgba(var(--color-glass-bg),0.15)] border border-[rgba(var(--color-glass-border),0.20)] text-[rgb(var(--color-text-primary))] hover:bg-[rgba(var(--color-glass-bg),0.20)] hover:border-[rgba(var(--color-glass-border),0.30)] shadow-lg hover:shadow-xl inline-flex items-center gap-2"
          >
            <Flag size={18} /> CTF Writeups
          </a>
          <a
            href="/about"
            class="pill-button glass-card text-[rgb(var(--color-text-primary))] hover:border-[rgba(var(--color-glass-border),0.20)]"
          >
            About Me
          </a>
        </div>
      </div>
    </section>

    <!-- Pinned Content -->
    {(pinnedPosts.length > 0 || pinnedNotes.length > 0) && (
      <section class="mb-20">
        <div class="flex items-center gap-3 mb-8">
          <Pin size={28} class="text-[rgb(var(--color-text-primary))]" />
          <h2 class="text-3xl font-bold text-[rgb(var(--color-text-primary))]">
            Featured
          </h2>
        </div>
        <div class="grid gap-6 md:grid-cols-2">
          {pinnedPosts.map((post) => (
            <BlogPostCard post={post} />
          ))}
          {pinnedNotes.map((note) => (
            <NoteCard note={note} />
          ))}
        </div>
      </section>
    )}

    <!-- Latest Blog Posts -->
    <section class="mb-20">
      <div class="flex justify-between items-center mb-8">
        <div class="flex items-center gap-3">
          <FileText size={28} class="text-[rgb(var(--color-text-primary))]" />
          <h2 class="text-3xl font-bold text-[rgb(var(--color-text-primary))]">Latest Posts</h2>
        </div>
        <a
          href="/blog"
          class="text-[rgb(var(--color-text-primary))] hover:text-[rgb(var(--color-text-secondary))] font-medium flex items-center gap-2 group"
        >
          View all
          <ArrowRight size={20} class="group-hover:translate-x-1 transition-transform" />
        </a>
      </div>
      <div class="grid gap-6 md:grid-cols-3">
        {latestPosts.map((post) => (
          <BlogPostCard post={post} />
        ))}
      </div>
    </section>

    <!-- Latest Notes -->
    <section class="mb-20">
      <div class="flex justify-between items-center mb-8">
        <div class="flex items-center gap-3">
          <BookOpen size={28} class="text-[rgb(var(--color-text-primary))]" />
          <h2 class="text-3xl font-bold text-[rgb(var(--color-text-primary))]">Latest Notes</h2>
        </div>
        <a
          href="/notes"
          class="text-[rgb(var(--color-text-primary))] hover:text-[rgb(var(--color-text-secondary))] font-medium flex items-center gap-2 group"
        >
          View all
          <ArrowRight size={20} class="group-hover:translate-x-1 transition-transform" />
        </a>
      </div>
      <div class="grid gap-6 md:grid-cols-3">
        {latestNotes.map((note) => (
          <NoteCard note={note} />
        ))}
      </div>
    </section>
  </div>
</BaseLayout>
