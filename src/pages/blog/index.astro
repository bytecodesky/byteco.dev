---
import BaseLayout from '../../layouts/BaseLayout.astro';
import BlogPostCard from '../../components/BlogPostCard.astro';
import { getAllBlogPosts } from '../../lib/content';
import { FileText } from 'lucide-astro';

const posts = await getAllBlogPosts();
---

<BaseLayout
  title="Blog - byteco.dev"
  description="Articles about web development, programming, and technology"
>
  <div class="container mx-auto px-8 py-16">
    <header class="mb-16">
      <div class="flex items-center gap-4 mb-6">
        <FileText size={48} class="text-[rgb(var(--color-accent))]" />
        <h1 class="text-5xl font-bold text-[rgb(var(--color-text-primary))]">Blog</h1>
      </div>
      <p class="text-xl text-[rgb(var(--color-text-secondary))] max-w-3xl">
        In-depth articles about web development, programming patterns, and technology.
      </p>
    </header>

    {posts.length === 0 ? (
      <div class="glass-card p-12 text-center">
        <p class="text-lg text-[rgb(var(--color-text-tertiary))]">No blog posts yet. Check back soon!</p>
      </div>
    ) : (
      <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
        {posts.map((post) => (
          <BlogPostCard post={post} />
        ))}
      </div>
    )}
  </div>
</BaseLayout>
