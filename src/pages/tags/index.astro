---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getAllTags } from '../../lib/content';
import { Tag } from 'lucide-astro';

const tagCounts = await getAllTags();
const sortedTags = Array.from(tagCounts.entries())
  .sort((a, b) => b[1] - a[1]);
---

<BaseLayout
  title="Tags - byteco.dev"
  description="Browse content by tags"
>
  <div class="container mx-auto px-8 py-16">
    <header class="mb-16">
      <div class="flex items-center gap-4 mb-6">
        <Tag size={48} class="text-[rgb(var(--color-accent))]" />
        <h1 class="text-5xl font-bold text-[rgb(var(--color-text-primary))]">Tags</h1>
      </div>
      <p class="text-xl text-[rgb(var(--color-text-secondary))] max-w-3xl">
        Browse all posts and notes by topic.
      </p>
    </header>

    {sortedTags.length === 0 ? (
      <div class="glass-card p-12 text-center">
        <p class="text-lg text-[rgb(var(--color-text-tertiary))]">No tags yet.</p>
      </div>
    ) : (
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
        {sortedTags.map(([tag, count]) => (
          <a
            href={`/tags/${tag}`}
            class="group glass-card-hover p-6 text-center"
          >
            <div class="flex flex-col items-center gap-2">
              <span class="text-3xl font-bold text-[rgb(var(--color-accent))] group-hover:text-[rgb(var(--color-accent-hover))]">
                #{tag}
              </span>
              <span class="text-sm text-[rgb(var(--color-text-tertiary))]">
                {count} {count === 1 ? 'item' : 'items'}
              </span>
            </div>
          </a>
        ))}
      </div>
    )}
  </div>
</BaseLayout>
