---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getAllTags } from '../../lib/content';

const tagCounts = await getAllTags();
const sortedTags = Array.from(tagCounts.entries())
  .sort((a, b) => b[1] - a[1]);
---

<BaseLayout
  title="Tags - byteco.dev"
  description="Browse content by tags"
>
  <div class="container mx-auto px-4 py-12">
    <header class="mb-12">
      <h1 class="text-4xl font-bold mb-4 text-[rgb(var(--color-text-primary))]">Tags</h1>
      <p class="text-lg text-[rgb(var(--color-text-secondary))]">
        Browse all posts and notes by topic.
      </p>
    </header>

    {sortedTags.length === 0 ? (
      <p class="text-[rgb(var(--color-text-tertiary))]">No tags yet.</p>
    ) : (
      <div class="flex flex-wrap gap-4">
        {sortedTags.map(([tag, count]) => (
          <a
            href={`/tags/${tag}`}
            class="group block border border-[rgb(var(--color-border))] rounded-lg p-6 hover:border-[rgb(var(--color-accent))] transition-colors"
          >
            <div class="flex items-center gap-3">
              <span class="text-2xl font-bold text-[rgb(var(--color-accent))] group-hover:text-[rgb(var(--color-accent-hover))]">
                #{tag}
              </span>
              <span class="text-sm text-[rgb(var(--color-text-tertiary))]">
                {count} {count === 1 ? 'item' : 'items'}
              </span>
            </div>
          </a>
        ))}
      </div>
    )}
  </div>
</BaseLayout>
