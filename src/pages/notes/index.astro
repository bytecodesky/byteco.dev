---
import BaseLayout from '../../layouts/BaseLayout.astro';
import NoteCard from '../../components/NoteCard.astro';
import { getAllNotes } from '../../lib/content';

const notes = await getAllNotes();
---

<BaseLayout
  title="Notes - byteco.dev"
  description="Quick notes and learnings on various topics"
>
  <div class="container mx-auto px-8 py-16">
    <header class="mb-16">
      <div class="flex items-center gap-3 mb-6">
        <span class="text-5xl">ðŸ““</span>
        <h1 class="text-5xl font-bold text-[rgb(var(--color-text-primary))]">Notes</h1>
      </div>
      <p class="text-xl text-[rgb(var(--color-text-secondary))] max-w-3xl">
        Quick notes, code snippets, and TIL (Today I Learned) moments.
      </p>
    </header>

    {notes.length === 0 ? (
      <div class="glass-card p-12 text-center">
        <p class="text-lg text-[rgb(var(--color-text-tertiary))]">No notes yet. Check back soon!</p>
      </div>
    ) : (
      <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
        {notes.map((note) => (
          <NoteCard note={note} />
        ))}
      </div>
    )}
  </div>
</BaseLayout>
