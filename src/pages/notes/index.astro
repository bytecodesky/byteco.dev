---
import BaseLayout from '../../layouts/BaseLayout.astro';
import NoteCard from '../../components/NoteCard.astro';
import { getAllNotes } from '../../lib/content';

const notes = await getAllNotes();
---

<BaseLayout
  title="Notes - byteco.dev"
  description="Quick notes and learnings on various topics"
>
  <div class="container mx-auto px-4 py-12">
    <header class="mb-12">
      <h1 class="text-4xl font-bold mb-4 text-[rgb(var(--color-text-primary))]">Notes</h1>
      <p class="text-lg text-[rgb(var(--color-text-secondary))]">
        Quick notes, code snippets, and TIL (Today I Learned) moments.
      </p>
    </header>

    {notes.length === 0 ? (
      <p class="text-[rgb(var(--color-text-tertiary))]">No notes yet. Check back soon!</p>
    ) : (
      <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
        {notes.map((note) => (
          <NoteCard note={note} />
        ))}
      </div>
    )}
  </div>
</BaseLayout>
