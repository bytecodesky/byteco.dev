      <div class="flex gap-6">
        {socialLinks.map((link) => (
          <a
            href={link.href}
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center gap-2 text-[rgb(var(--color-text-tertiary))] hover:text-[rgb(var(--color-accent))] transition-colors"
            aria-label={link.name}
          >
            <span class="text-xl">{link.icon}</span>
            <span class="text-sm hidden sm:inline">{link.name}</span>
          </a>
        ))}
      </div>
    </div>
  </div>
