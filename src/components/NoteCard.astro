---
import type { Note } from '../lib/content';
import { formatDate } from '../utils/helpers';
import TagList from './TagList.astro';

interface Props {
  note: Note;
}

const { note } = Astro.props;
const { title, date, tags } = note.data;
---

<article class="glass-card-hover p-8">
  <a href={`/notes/${note.slug}`} class="block group">
    <div class="flex items-start gap-3 mb-3">
      <span class="text-2xl">ðŸ““</span>
      <h3 class="text-2xl font-bold text-[rgb(var(--color-text-primary))] group-hover:text-[rgb(var(--color-accent))] transition-colors">
        {title}
      </h3>
    </div>
    <time class="text-sm text-[rgb(var(--color-text-tertiary))]" datetime={date.toISOString()}>
      {formatDate(date)}
    </time>
  </a>
  {tags.length > 0 && (
    <div class="mt-4 pt-4 border-t border-[rgba(var(--color-glass-border),0.3)]">
      <TagList tags={tags} size="sm" />
    </div>
  )}
</article>
