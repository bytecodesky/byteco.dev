---
import type { BlogPost } from '../lib/content';
import { formatDate } from '../utils/helpers';

interface Props {
  posts: BlogPost[];
}

const { posts } = Astro.props;
---

{posts.length > 0 && (
  <section class="mt-16 pt-8 border-t border-[rgba(var(--color-glass-border),0.3)]">
    <h2 class="text-3xl font-bold mb-8 text-[rgb(var(--color-text-primary))]">Related Posts</h2>
    <div class="grid gap-6 md:grid-cols-3">
      {posts.map((post) => (
        <article class="glass-card-hover p-6">
          <a href={`/blog/${post.slug}`} class="block group">
            <h3 class="text-lg font-semibold mb-3 text-[rgb(var(--color-text-primary))] group-hover:text-[rgb(var(--color-text-secondary))] transition-colors">
              {post.data.title}
            </h3>
            <time class="text-sm text-[rgb(var(--color-text-tertiary))]" datetime={post.data.date.toISOString()}>
              {formatDate(post.data.date)}
            </time>
          </a>
        </article>
      ))}
    </div>
  </section>
)}
