---
interface Props {
  tags: string[];
  size?: 'sm' | 'md';
}

const { tags, size = 'md' } = Astro.props;

const sizeClasses = {
  sm: 'text-xs px-3 py-1',
  md: 'text-sm px-4 py-2',
};
---

<div class="flex flex-wrap gap-2">
  {tags.map((tag) => (
    <a
      href={`/tags/${tag}`}
      class={`inline-block glass-card text-[rgb(var(--color-text-secondary))] rounded-full hover:bg-[rgba(var(--color-glass-bg),0.15)] hover:text-[rgb(var(--color-text-primary))] hover:border-[rgba(var(--color-glass-border),0.20)] transition-all ${sizeClasses[size]}`}
    >
      #{tag}
    </a>
  ))}
</div>
