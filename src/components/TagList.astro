---
interface Props {
  tags: string[];
  size?: 'sm' | 'md';
}

const { tags, size = 'md' } = Astro.props;

const sizeClasses = {
  sm: 'text-xs px-2 py-1',
  md: 'text-sm px-3 py-1',
};
---

<div class="flex flex-wrap gap-2">
  {tags.map((tag) => (
    <a
      href={`/tags/${tag}`}
      class={`inline-block bg-[rgb(var(--color-bg-secondary))] text-[rgb(var(--color-text-secondary))] rounded-full hover:bg-[rgb(var(--color-accent))] hover:text-white transition-colors ${sizeClasses[size]}`}
    >
      #{tag}
    </a>
  ))}
</div>
